@page "/seller/products/{ProductId:int}" 
@using Website.Client.Pages.Seller.ProductPage.Components

<Title Value="@($"Product #{ProductId} Seller - Unturned Store")"></Title>

<div class="d-flex align-items-center">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Seller</li>
                <li class="breadcrumb-item"><a href="/seller/products">Products</a></li>
                <li class="breadcrumb-item active" aria-current="page">
                    <span>@ProductId</span>
                    @if (Product != null)
                    {
                        <span>@string.Concat(" - ", Product.Name)</span>
                    }
                </li>
            </ol>
        </nav>
    </div>
    
    <div class="ms-auto" style="margin-top: -20px;">
        <a href="/products/@ProductId">View Public</a>
    </div>
</div>


<div class="mt-2">
    @if (Product != null)
    {
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link active" id="basicinfo-tab" data-bs-toggle="tab" href="#basicinfo" role="tab">
                    <i class="bi bi-info"></i> Basic Information
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="tabs-tab" data-bs-toggle="tab" href="#tabs" role="tab">
                    <i class="bi bi-card-list"></i> Tabs
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="medias-tab" data-bs-toggle="tab" href="#medias" role="tab">
                    <i class="bi bi-images"></i> Medias
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link" id="branches-tab" data-bs-toggle="tab" href="#branches" role="tab">
                    <i class="bi bi-gear-fill"></i> Branches
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="uploadversion-tab" href="/seller/products/@ProductId/uploadversion" role="tab">
                    <i class="bi bi-cloud-upload-fill"></i> Upload Version
                </a>
            </li>
        </ul>
        <div class="tab-content bg-light p-3">
                <div class="tab-pane fade show active" id="basicinfo" role="tabpanel">
                    <BasicInfoTab Product="Product" />
                </div>
                <div class="tab-pane fade" id="tabs" role="tabpanel">
                    <TabsTab Product="Product" />
                </div>
                <div class="tab-pane fade" id="medias" role="tabpanel">
                    <MediasTab Product="Product" />
                </div>
                <div class="tab-pane fade" id="branches" role="tabpanel">
                    <BranchesTab Product="Product" />
                </div>
        </div>

    }
    else
    {
        if (statusCode == System.Net.HttpStatusCode.BadRequest)
        {
            <h4>You don't have access to this product</h4>
        } else if (statusCode == System.Net.HttpStatusCode.NoContent)
        {
            <h4>Product not found</h4>
        } else
        {
            <Progressbar />
        }        
    }
</div>
